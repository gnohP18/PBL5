@page
@using Volo.Abp.Account.Settings
@using Volo.Abp.Settings
@using PBL5.Localization
@using Microsoft.Extensions.Localization
@model Volo.Abp.Account.Web.Pages.Account.LoginModel
@inject IStringLocalizer<PBL5Resource> L
@inject Volo.Abp.Settings.ISettingProvider SettingProvider
<div class="card mt-3 shadow-sm rounded">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h3>@L["WelcomeMessgae"]</h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label asp-for="LoginInput.UserNameOrEmailAddress"
                    class="form-label">@L["UserNameOrEmailAddress"]</label>
                <input asp-for="LoginInput.UserNameOrEmailAddress" class="form-control" />
                <span asp-validation-for="LoginInput.UserNameOrEmailAddress" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LoginInput.Password" class="form-label">@L["Password"]</label>
                <input asp-for="LoginInput.Password" class="form-control" />
                <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
            </div>
            <abp-row>
                <abp-column>
                    <abp-input asp-for="LoginInput.RememberMe" class="mb-4" />
                </abp-column>
                <abp-column class="text-end forgot-password">
                    <a
                        href="@Url.Page("./ForgotPassword", new {returnUrl = Model.ReturnUrl, returnUrlHash = Model.ReturnUrlHash})">@L["ForgotPassword"]</a>
                </abp-column>
            </abp-row>
            <div class="d-grid gap-2">
                <abp-button type="submit" button-type="Primary" name="Action" value="Login"
                    class="mt-3 btn-login">@L["Login"]</abp-button>
                @if (Model.ShowCancelButton)
                {
                    <abp-button type="submit" button-type="Secondary" formnovalidate="formnovalidate" name="Action"
                        value="Cancel" class="btn-lg mt-3 btn-login">@L["Cancel"]</abp-button>
                }
            </div>
        </form>
    </div>
</div>
